# hw definition file for processing by chibios_pins.py
# for DefDrones H743

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# board ID for firmware load
APJ_BOARD_ID 9999

# crystal frequency, setup to use external oscillator
OSCILLATOR_HZ 24000000

define HAL_BOOTLOADER_TIMEOUT 10

FLASH_SIZE_KB 2048

# bootloader is installed at zero offset
FLASH_RESERVE_START_KB 0

# the location where the bootloader will put the firmware
# the H743 has 128k sectors
FLASH_BOOTLOADER_LOAD_KB 32

define HAL_LED_ON 0

PB1 LED_BOOTLOADER OUTPUT HIGH GPIO(90)

SERIAL_ORDER OTG1 USART3 USART2 USART6

# USART3 serial telem1
PD8 USART3_TX USART3
PD9 USART3_RX USART3
PB13 USART3_CTS_NSS USART3
PB14 USART3_RTS USART3

#USART2 serial telem2
PD5 USART2_TX USART2
PD6 USART2_RX USART2

#USART6 OSD telem
PC6 USART6_TX USART6
PC7 USART6_RX USART6

# USB setup
USB_STRING_MANUFACTURER "DEFDRONES"

#--------------------------------USB-----------------------------------
# This is the pin that senses USB being connected. It is an input pin
# setup as OPENDRAIN.
#PB15 VBUS INPUT OPENDRAIN

# Now we define the pins that USB is connected on.
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

# enable DFU by default
#ENABLE_DFU_BOOT 1

# Add CS pins to ensure they are high in bootloader
#PC0 BMI0xx_A_CS CS  #BMI055/BMI088
#PC1 BMI0xx_G_CS CS  #BMI055/BMI088
#PA4 BMIxx0_CS CS    #BMI160/BMI270
#PB7 ICM42688_CS CS
#PE4 MAX7456_CS CS
PE2 SPI4_SCK OUTPUT LOW

PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# disable peripheral and sensor power in the bootloader
PE9 VDD_3V3_SENSORS_EN OUTPUT LOW #sensors
PE12 VDD_5V_PERIPH_EN OUTPUT HIGH #CAN, UART power

PC15 RELAY_1 OUTPUT LOW GPIO(70) #LOCK1
PE3 RELAY_2 OUTPUT LOW GPIO(71) #LOCK2
PC14 RELAY_3 OUTPUT LOW GPIO(72) #VTX_POWER_EN 							HIGH ENABLE
PD4 RELAY_5 OUTPUT LOW GPIO(74) #USART1 POWER RELAY +5VSERIAL1_EN		LOW ENABLE
PD11 RELAY_6 OUTPUT LOW GPIO(81) #SERIAL3 POWER RELAY +5VSERIAL3_EN		LOW ENABLE
PB2 RELAY_7 OUTPUT LOW GPIO(75) #UART7 POWER RELAY +5VSERIAL5_EN		LOW ENABLE
